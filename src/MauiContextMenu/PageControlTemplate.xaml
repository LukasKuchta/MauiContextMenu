<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:vm="clr-namespace:MauiContextMenu.ViewModels.ContextMenu.Base"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ControlTemplate x:Key="ContextMenuPageTemplate">
        <Grid BindingContext="{Binding Source={RelativeSource AncestorType={x:Type vm:ContextMenuPageViewModelBase}}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*" />
                <RowDefinition Height="0.8*" />
                <RowDefinition Height="0.1*" />
            </Grid.RowDefinitions>
            <BoxView Color="ForestGreen" />
            <Label Margin="20,0,0,0"
               Text="{Binding Title}"
               TextColor="White"
               FontSize="24"
               VerticalOptions="Center" />
            <ContentPresenter Grid.Row="1" />
            <BoxView Grid.Row="2"
                 Color="FloralWhite" />
            <Label x:Name="changeThemeLabel"
               Grid.Row="2"
               Margin="20,0,0,0"
               Text="Footer"
               TextColor="White"
               HorizontalOptions="Start"
               VerticalOptions="Center">
            </Label>
        </Grid>
    </ControlTemplate>
</ResourceDictionary>